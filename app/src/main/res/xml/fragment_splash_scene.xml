<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="1000">
       <KeyFrameSet>

           <!--     Logo      -->
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="0"
               android:scaleX="0" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="0"
               android:scaleY="0" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="20"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="0"
               android:scaleY="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="20"
               android:scaleY="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="40"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="40"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="80"
               android:scaleX="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="80"
               android:scaleY="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="100"
               android:scaleX="0" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLogo"
               motion:framePosition="100"
               android:scaleY="0" />

           <!--     Sky      -->
           <KeyAttribute
               motion:motionTarget="@+id/layoutHeader"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/layoutHeader"
               motion:framePosition="80"
               android:alpha="0" />

           <!--     Left Clouds      -->
           <KeyAttribute
               motion:motionTarget="@+id/imgBgCloudsLeft"
               motion:framePosition="0"
               android:translationX="-400dp" />
           <KeyAttribute
               motion:motionTarget="@+id/imgBgCloudsLeft"
               motion:framePosition="80"
               android:translationX="-400dp" />
           <KeyAttribute
               motion:motionTarget="@+id/imgBgCloudsLeft"
               motion:framePosition="100"
               android:translationX="0dp" />

            <!--     Right Clouds      -->
           <KeyAttribute
               motion:motionTarget="@+id/imgBgCloudsRight"
               motion:framePosition="0"
               android:translationX="400dp" />
           <KeyAttribute
               motion:motionTarget="@+id/imgBgCloudsRight"
               motion:framePosition="80"
               android:translationX="400dp" />
           <KeyAttribute
               motion:motionTarget="@+id/imgBgCloudsRight"
               motion:framePosition="100"
               android:translationX="0dp" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>